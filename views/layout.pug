doctype html
html
  head
    title &#127790; Taco Spin

    meta(charset, 'utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(http-equiv='Cache-Control', content='no-cache, no-store, must-revalidate')
    meta(http-equiv='Pragma', content='no-cache')
    meta(http-equiv='Expires', content='0')


    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' crossorigin='anonymous')

    //- Our Style Sheet
    link(rel='stylesheet', href='/css/styles.css')
  
  body(class='d-flex h-100 text-center text-white bg-dark')

    .cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column(style='height: 10vh;')
      header.mb-auto
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
          .container-fluid
            a.navbar-brand(href='/')
              img.d-inline-block.align-text-top(src='/img/taco-svg_no-face.svg' height='20' alt='Taco Spin')
              | Taco Spin
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
              span.navbar-toggler-icon
            div.collapse.navbar-collapse(id='navbarSupportedContent')
              ul.navbar-nav.ms-auto
                li.nav-item
                  a.nav-link(href='/') Home
                li.nav-item
                  a.nav-link(href='/history' data-bs-toggle='offcanvas' data-bs-target='#offcanvasMenu_winners' aria-controls='offcanvasMenu_winners') History
                li.nav-item
                  a.nav-link(href='/addUser') Add User

      block content
      block userActions

      block footer
        #footer
          footer.footer
            .container
              span.text-muted Rodney Sean, MIT License
      
      block history
      #offcanvasMenu_winners.offcanvas.offcanvas-start(tabindex='-1' aria-labelledby='offcanvasMenu_winnersLabel')
        .offcanvas-header
          h5#offcanvasMenu_winnersLabel.offcanvas-title Past Winners
          button.btn-close.text-reset(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
        .offcanvas-body
          .offcanvas-section
          h4.text-dark Previous Winners
          table#winningHistory.table.table-striped.table-hover
            thead
              tr
                th(scope='col') Name
                th(scope='col') Guess
                th(scope='col') Total spins
                th(scope='col') Date
            tbody
        
      script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js' integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf' crossorigin='anonymous')
      script(src='https://code.jquery.com/jquery-3.5.1.js')
      script(src='/scripts/scripts.js')